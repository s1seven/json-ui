{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Person",
  "type": "object",
  "properties": {
    "school": {
      "type": "string"
    }
  },
  "oneOf": [
    {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "age": { "type": "number", "minimum": 0 }
      },
      "required": ["name", "age"]
    },
    {
      "type": "object",
      "properties": {
        "company": { "type": "string" },
        "employees": { "type": "number", "minimum": 1 }
      },
      "required": ["company", "employees"]
    }
  ]
}
