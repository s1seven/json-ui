{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/product",
  "type": "object",
  "anyOf": [
    {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "age": { "type": "number", "minimum": 0 }
      },
      "required": ["name", "age"]
    },
    {
      "type": "object",
      "properties": {
        "id": { "type": "string" }
      },
      "required": ["id"]
    },
    {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    {
      "type": "string",
      "pattern": "^[0-9]+$"
    }
  ]
}
